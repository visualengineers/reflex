<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->
    <Color x:Key="Primary">#0071B7</Color>
    <Color x:Key="Success">#008000</Color>
    <Color x:Key="Error">#B1160B</Color>
    <Color x:Key="UndefinedState">#FFFFFF</Color>

    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>
    <Color x:Key="GrayLight">#949494</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="BrushConnectionStatusConnected" Color="{StaticResource Success}"/>
    <SolidColorBrush x:Key="BrushConnectionStatusDisconnected" Color="{StaticResource Error}"/>
    <SolidColorBrush x:Key="BrushConnectionStatusUndefined" Color="{StaticResource UndefinedState}"/>

    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>
    <SolidColorBrush x:Key="GrayLightBrush" Color="{StaticResource GrayLight}"/>

    <LinearGradientBrush x:Key="TitleGradientBrush">
      <GradientStop Offset="0" Color="#00ffffff"></GradientStop>
      <GradientStop Offset="1" Color="#33000000"></GradientStop>
    </LinearGradientBrush>

    <Image x:Key="ReFlexLogo" Source="logo_reflex.png"/>
    <Image x:Key="HTWLogo" Source="logo_htw_image.png"/>
    <Image x:Key="HTWText" Source="logo_htw_text.png"/>

</ResourceDictionary>
