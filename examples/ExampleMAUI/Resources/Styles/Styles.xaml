<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

  <Style x:Key="VerticalBorder" TargetType="BoxView">
    <Setter Property="HorizontalOptions" Value="Start"/>
    <Setter Property="Color" Value="{StaticResource GrayLight}"/>
    <Setter Property="VerticalOptions" Value="Fill"/>
    <Setter Property="Margin" Value="0"/>
    <Setter Property="WidthRequest" Value="1"/>
  </Style>

  <Style x:Key="StatusPanelBorder" TargetType="Grid">
    <Setter Property="HorizontalOptions" Value="Fill"></Setter>
    <Setter Property="Background" Value="{StaticResource White}"></Setter>
    <Setter Property="Margin" Value="20,5"/>
    <Setter Property="Padding" Value="5,5,0,5"></Setter>
  </Style>
  <Style TargetType="Ellipse" x:Key="ConnectionStateVisual">
    <Setter Property="WidthRequest" Value="15"/>
    <Setter Property="HeightRequest" Value="15"/>
    <Setter Property="Margin" Value="0,0,10,0"/>
    <Setter Property="Stroke" Value="{StaticResource GrayLight}"/>
    <Setter Property="StrokeThickness" Value="1"/>
  </Style>
  <Style x:Key="TextDescriptionLabel" TargetType="Label">
    <Setter Property="FontFamily" Value="BarlowCondensedRegular"/>
    <Setter Property="TextColor" Value="{StaticResource Primary}"/>
  </Style>
  <Style x:Key="TextDescriptionItem" TargetType="{x:Type Label}">
    <Setter Property="FontFamily" Value="BarlowRegular"/>
    <Setter Property="TextColor" Value="{StaticResource GrayLight}"/>
  </Style>
  <Style TargetType="Button">
    <Setter Property="Background" Value="{StaticResource Primary}"/>
    <Setter Property="BorderColor" Value="{StaticResource White}"/>
    <Setter Property="TextColor" Value="{StaticResource White}"/>
    <Setter Property="FontFamily" Value="BarlowRegular"/>
    <Setter Property="WidthRequest" Value="150"/>
    <Setter Property="HeightRequest" Value="25"/>
    <Setter Property="Margin" Value="0,10"/>
  </Style>

</ResourceDictionary>
