{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "compounds": [
        {
            "name": ".NET Core & Chrome (Debug)",
            "configurations": [
                "Web Frontend - Angular",
                "Server Backend - .NET Core (Debug)"
            ]
        },
        {
            "name": ".NET Core & Chrome (Release)",
            "configurations": [
                "Web Frontend - Angular",
                "Server Backend - .NET Core (Release)"
            ]
        },
        {
            "name": ".NET Core & Chrome (Debug ARM64)",
            "configurations": [
                "Web Frontend - Angular",
                "Server Backend - .NET Core (Debug ARM64)"
            ]
        },
        {
            "name": ".NET Core & Chrome (Release ARM64)",
            "configurations": [
                "Web Frontend - Angular",
                "Server Backend - .NET Core (Release ARM64)"
            ]
        }
    ],
    "configurations": [
        {
            "name": "Launch Logging",
            "request": "launch",
            "cwd": "${workspaceFolder}/tools/logging",
            "runtimeArgs": [
                "run-script",
                "debug"
            ],
            "sourceMaps": true,
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal",
            "type": "node"
        },
        {
            "type": "msedge",
            "request": "launch",
            "name": "Web Frontend - Angular",
            "preLaunchTask": "start trackingserver angular app",
            "url": "https://localhost:5001",
            "webRoot": "${workspaceFolder}/tools/ReFlex.TrackingServer/ClientApp",
            "userDataDir": true
        },
        {
            "type": "msedge",
            "name": "Start Emulator",
            "request": "launch",
            "webRoot": "${workspaceFolder}/tools/emulator",
            "url": "http://localhost:4300",
            "preLaunchTask": "run emulator"
        },
        {
            "type": "msedge",
            "name": "Start Angular Example",
            "request": "launch",
            "webRoot": "${workspaceFolder}/tools/basic-angular",
            "url": "http://localhost:4201",
            "preLaunchTask": "run angular example client app"
        },
        {
            "type": "msedge",
            "name": "Start React Example",
            "request": "launch",
            "webRoot": "${workspaceFolder}/tools/basic-react",
            "url": "http://localhost:3000",
            "preLaunchTask": "run react example client app"
        },
        {
            "type": "msedge",
            "name": "Start Vue Example",
            "request": "launch",
            "webRoot": "${workspaceFolder}/tools/basic-vue/src",
            "sourceMapPathOverrides": {
                "webpack:/*": "${webRoot}/*",
                "/./*": "${webRoot}/*",
                "/src/*": "${webRoot}/*",
                "/*": "*",
                "/./~/*": "${webRoot}/node_modules/*"
            },
            "url": "http://localhost:8080",
            "preLaunchTask": "run vue example client app"
        },
        {
            "name": "Start Emulator with Basic Angular Example",
            "request": "launch",
            "cwd": "${workspaceFolder}/examples/basic-angular",
            "runtimeArgs": [
                "run-script",
                "start"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "console": "integratedTerminal",

            "preLaunchTask": "run emulator"
        },
        {
            "name": "Server Backend - .NET Core (Debug)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build (Debug)",
            "program": "${workspaceFolder}/tools/ReFlex.TrackingServer/bin/x64/Debug/net8.0/ReFlex.TrackingServer.dll",
            "args": [],
            "cwd": "${workspaceFolder}/tools/ReFlex.TrackingServer",
            "stopAtEntry": false,
            "internalConsoleOptions": "neverOpen",
            "externalConsole": true,
            "launchBrowser": {
                "enabled": false,
                "args": "${auto-detect-url}",
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start ${auto-detect-url}"
                },
                "osx": {
                    "command": "open"
                },
                "linux": {
                    "command": "xdg-open"
                }
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "development",
                "Platform": "x64",
                "DisableElectron": "true"
            },
        },
        {
            "name": "Server Backend - .NET Core (Release)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build (Release)",
            "program": "${workspaceFolder}/tools/ReFlex.TrackingServer/bin/x64/Release/net8.0/ReFlex.TrackingServer.dll",
            "args": [],
            "cwd": "${workspaceFolder}/tools/ReFlex.TrackingServer",
            "stopAtEntry": false,
            "internalConsoleOptions": "neverOpen",
            "externalConsole": true,
            "launchBrowser": {
                "enabled": false,
                "args": "${auto-detect-url}",
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start ${auto-detect-url}"
                },
                "osx": {
                    "command": "open"
                },
                "linux": {
                    "command": "xdg-open"
                }
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "production",
                "Platform": "x64",
                "DisableElectron": "true"
            },
        },
        {
            "name": "Server Backend - .NET Core (Debug ARM64)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build (Debug ARM64)",
            "program": "${workspaceFolder}/tools/ReFlex.TrackingServer/bin/ARM64/Debug/net8.0/ReFlex.TrackingServer.dll",
            "args": [],
            "cwd": "${workspaceFolder}/tools/ReFlex.TrackingServer",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart",
            "externalConsole": false,
            "launchBrowser": {
                "enabled": false,
                "args": "${auto-detect-url}",
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start ${auto-detect-url}"
                },
                "osx": {
                    "command": "open"
                },
                "linux": {
                    "command": "xdg-open"
                }
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "development",
                "Platform": "ARM64",
                "DisableElectron": "true"
            },
        },
        {
            "name": "Server Backend - .NET Core (Release ARM64)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build (Release ARM64)",
            "program": "${workspaceFolder}/tools/ReFlex.TrackingServer/bin/ARM64/Release/net8.0/ReFlex.TrackingServer.dll",
            "args": [],
            "cwd": "${workspaceFolder}/tools/ReFlex.TrackingServer",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart",
            "externalConsole": false,
            "launchBrowser": {
                "enabled": false,
                "args": "${auto-detect-url}",
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start ${auto-detect-url}"
                },
                "osx": {
                    "command": "open"
                },
                "linux": {
                    "command": "xdg-open"
                }
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "production",
                "Platform": "ARM64",
                "DisableElectron": "true"
            },
        }
    ]
}
